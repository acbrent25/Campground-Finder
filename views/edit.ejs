<% include partials/header %>

<div class="container my-5">
  <div class="row">
    <div class="col-md-8 m-auto">
        <h3 class="text-center">Edit <%= campground.title %></h3>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="mt-4">
          <div class="form-group">
            <input type="text" class="form-control" name="campground[name]" id="campgroundName" value="<%= campground.name %>">
          </div>
          <div class="form-group">
            <input type="text" class="form-control"  name="campground[image]" id="campgroundImage" value="<%= campground.image %>">
          </div>
          <div class="form-group">
            <textarea class="form-control" id="blogDescription" name="campground[description]" rows="3"><%= campground.description %></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        <p class="pt-1">
            <a href="/campgrounds" >Go Back</a>
        </p>
        
    </div>   
  </div>

</div>

  <% include partials/footer %>